<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  <display-name>LeaveManagementSystem</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ApplyLeaveServlet</servlet-name>
    <servlet-class>servlet.ApplyLeaveServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ApplyLeaveServlet</servlet-name>
    <url-pattern>/applyLeave</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdateStatusServlet</servlet-name>
    <servlet-class>servlet.UpdateStatusServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateStatusServlet</servlet-name>
    <url-pattern>/updateStatus</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-name>LogoutServlet</servlet-name>
  <servlet-class>servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>LogoutServlet</servlet-name>
  <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
        <servlet-name>GenerateLeaveReportServlet</servlet-name>
        <servlet-class>GenerateLeaveReportServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GenerateLeaveReportServlet</servlet-name>
        <url-pattern>/generate_leave_report</url-pattern>
    </servlet-mapping>
</web-app>